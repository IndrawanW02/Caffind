<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/starting_page"
    tools:context=".activities.MainActivity"
    android:gravity="bottom"
    android:clipToPadding="false">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginTop="60dp"
        android:text="Start Your Journey to Discovering the Perfect Coffee Spot! ☕✨"
        android:textColor="@color/white"
        android:fontFamily="@font/funnel_display_bold"
        android:textSize="48sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="-70dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="50dp"
        app:cardElevation="80dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="48dp">

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up "
                android:fontFamily="@font/montserrat_semi_bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/button_filled"/>

            <Button
                android:id="@+id/btnGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Join as a Guest"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textSize="16sp"
                android:textColor="@color/brown_04"
                android:textAllCaps="false"
                android:background="@drawable/button_unfilled"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
