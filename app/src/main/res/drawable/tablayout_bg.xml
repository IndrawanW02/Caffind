<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="2dp">
        <shape>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

    <item android:right="-2dp" android:left="-2dp" android:top="0dp" android:bottom="-2dp">
        <shape>
            <stroke
                android:color="#33000000"
            android:width="1dp"/>
        </shape>
    </item>
</layer-list>